{
  "$schema": "https://json.schemastore.org/json-schema.json",
  "meta": {
    "name": "Pastel Study Companion (Mobile) – v2 with Purple Primary",
    "version": "1.1.0",
    "source": "Derived from NEW_DESING_SYSYEM.json with updated palette",
    "purpose": "Keep the same soft, pastel, pill-first design DNA but switch the primary hue to #9682EE and de-emphasize red.",
    "keywords": ["soft", "pastel", "rounded", "airy", "friendly", "touch-first", "purple primary"]
  },
  "foundations": {
    "colors": {
      "base": {
        "ink": "#2D2933",
        "inkSecondary": "#5F5A6C",
        "inkMuted": "#9B97AA",
        "surface": "#FFFFFF",
        "surfaceAlt": "#F9F7FC"
      },
      "primary": {
        "main": "#9682EE",
        "rgb": "150, 130, 238"
      },
      "accents": {
        "pink": "#F59BCB",
        "yellow": "#FFC857",
        "teal": "#5CC2AA",
        "blue": "#7CA7FF"
      },
      "pastels": {
        "blush": "#FFE9F4",
        "peach": "#FFEEDC",
        "butter": "#FFF6D7",
        "mint": "#E8F7EE",
        "sky": "#E9F2FF",
        "lavender": "#F2EBFF",
        "violet": "#E9E4FF"
      },
      "semantic": {
        "success": "#5CC2AA",
        "warning": "#FFC857",
        "info": "#7CA7FF",
        "danger": "#E66A7A"
      },
      "usageRules": [
        "Use #9682EE as the primary action and highlight color.",
        "Reserve pink for accents and chips, not primary actions.",
        "Avoid strong reds; danger states remain subtle (#E66A7A) and are used sparingly.",
        "Prefer pastel fills over borders; if borders are needed, keep opacity low (~12–16%)."
      ]
    },
    "radii": {
      "tokensPx": { "xs": 10, "sm": 12, "md": 16, "lg": 20, "xl": 24, "pill": 999 },
      "usage": ["Cards 20–24px", "Inputs/buttons pill or 16–18px", "Chips pill"]
    },
    "typography": {
      "fontFamilies": {
        "primary": "var(--font-inter), Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif",
        "display": "Poppins, var(--font-inter), system-ui, sans-serif"
      },
      "scale": {
        "h1": { "sizePx": 22, "weight": 800, "lineHeight": 1.2, "letterSpacing": -0.02 },
        "h2": { "sizePx": 18, "weight": 800, "lineHeight": 1.22, "letterSpacing": -0.02 },
        "h3": { "sizePx": 15, "weight": 800, "lineHeight": 1.28, "letterSpacing": -0.01 },
        "body": { "sizePx": 14, "weight": 500, "lineHeight": 1.46, "letterSpacing": -0.01 },
        "bodySmall": { "sizePx": 12, "weight": 600, "lineHeight": 1.32, "letterSpacing": 0 },
        "caption": { "sizePx": 11, "weight": 700, "lineHeight": 1.24, "letterSpacing": 0.02 }
      },
      "usage": [
        "Bold, compact headings; calm body text.",
        "Keep labels short; avoid all caps except tiny badges."
      ]
    },
    "gridAndSpacing": {
      "baseUnitPx": 4,
      "gutterPx": 16,
      "sectionGapPx": 16,
      "cardStackGapPx": 12,
      "listRowGapPx": 10,
      "maxContentWidthMobilePx": 420
    },
    "motion": {
      "durationsMs": { "fast": 120, "normal": 180, "slow": 240 },
      "easing": { "standard": "cubic-bezier(0.2, 0.8, 0.2, 1)", "snappy": "cubic-bezier(0.4, 0, 0.2, 1)" },
      "usage": ["Press feedback: scale(0.98)", "Soft transitions; avoid heavy overshoot"]
    },
    "shadowsAndDepth": {
      "allowShadows": false,
      "layering": "Use surface contrast and pastel blocks; no heavy shadows."
    }
  },
  "components": {
    "Button": {
      "primary": { "bg": "#9682EE", "text": "#FFFFFF", "shape": "pill", "heightPx": 44 },
      "secondary": { "bg": "rgba(150, 130, 238, 0.14)", "text": "#2D2933", "shape": "pill", "heightPx": 44 },
      "ghost": { "bg": "transparent", "text": "#5F5A6C" },
      "danger": { "bg": "rgba(230, 106, 122, 0.14)", "text": "#E66A7A" }
    },
    "TabsPill": {
      "rail": { "bg": "rgba(150, 130, 238, 0.12)", "radius": "pill", "paddingPx": 6 },
      "tab": {
        "radius": "pill",
        "paddingY": 9,
        "paddingX": 12,
        "fontWeight": 800,
        "fontSizePx": 13,
        "selectedBg": "rgba(150, 130, 238, 0.18)",
        "selectedText": "#2D2933"
      }
    },
    "Chips": {
      "bg": "rgba(150, 130, 238, 0.12)",
      "selectedBg": "rgba(150, 130, 238, 0.18)",
      "text": "#5F5A6C",
      "selectedText": "#2D2933",
      "radius": "pill",
      "padding": { "y": 6, "x": 10 }
    },
    "Card": {
      "radiusPx": 22,
      "paddingPx": 16,
      "background": "#FFFFFF",
      "innerBlockBackgrounds": ["#FFEEDC", "#E8F7EE", "#E9E4FF"]
    },
    "ProgressBar": {
      "track": { "bg": "rgba(150, 130, 238, 0.12)", "heightPx": 8, "radius": "pill" },
      "fill": { "bg": "#9682EE", "radius": "pill" }
    },
    "Dropdown": {
      "trigger": {
        "bg": "rgba(150, 130, 238, 0.12)",
        "border": "1px solid rgba(150, 130, 238, 0.14)",
        "radiusPx": 16,
        "text": "#2D2933"
      },
      "menu": {
        "bg": "#FFFFFF",
        "border": "1px solid rgba(150, 130, 238, 0.12)",
        "radiusPx": 16,
        "shadow": "0 8px 24px rgba(0,0,0,0.05)"
      },
      "item": {
        "paddingPx": 10,
        "radiusPx": 12,
        "text": "#5F5A6C",
        "hoverBg": "rgba(150, 130, 238, 0.10)",
        "activeBg": "rgba(150, 130, 238, 0.14)"
      }
    },
    "UserCard": {
      "bg": "#F9F7FC",
      "radiusPx": 18,
      "avatarBg": "rgba(150, 130, 238, 0.14)",
      "status": {
        "online": "rgba(92, 194, 170, 0.18)",
        "busy": "rgba(255, 200, 87, 0.18)",
        "offline": "rgba(0,0,0,0.06)"
      }
    },
    "GroupCard": {
      "bg": "#F9F7FC",
      "radiusPx": 18,
      "badgeBg": "rgba(150, 130, 238, 0.14)",
      "progressTrack": "rgba(150, 130, 238, 0.12)",
      "progressFill": "#9682EE"
    }
  },
  "designPrinciples": {
    "do": [
      "Use #9682EE as the hero hue for actions and highlights.",
      "Favor pastel fills and pill shapes; avoid heavy borders and shadows.",
      "Keep typography bold for headings, calm for body.",
      "Maintain generous spacing and large hit areas."
    ],
    "dont": [
      "Avoid bright reds; danger stays subtle and rare.",
      "Avoid sharp corners and heavy gradients.",
      "Avoid outline buttons; prefer filled or tinted pills."
    ]
  },
  "implementationHints": {
    "cssVars": [
      "Expose --color-primary: #9682EE and --color-primary-rgb: 150,130,238",
      "Use rgba(var(--color-primary-rgb), alpha) for tints"
    ],
    "patterns": [
      "Primary buttons and progress use #9682EE",
      "Secondary/tinted elements use rgba(primary-rgb, 0.12–0.18)",
      "Danger only for destructive actions with soft red tint"
    ]
  }
}

