{
  "$schema": "https://json.schemastore.org/json-schema.json",
  "meta": {
    "name": "Modern Event Design System",
    "version": "1.0.0",
    "source": "Mobile course detail screen reference (Java Developing)",
    "intent": "High-level design system to guide AI in replicating modern, dark-themed mobile UI with vibrant accents, rounded elements, and gradient headers",
    "keywords": [
      "modern",
      "dark theme",
      "rounded",
      "gradient",
      "vibrant accents",
      "card-based",
      "mobile-first",
      "pill-shaped",
      "circular buttons",
      "clean",
      "premium"
    ],
    "designPhilosophy": [
      "Embrace dark backgrounds with high contrast for readability",
      "Use vibrant accent colors (purple, pink, yellow) strategically for emphasis",
      "Apply generous rounding to all interactive elements",
      "Create depth through gradients and layered surfaces",
      "Prioritize touch-friendly targets with adequate spacing",
      "Maintain consistency in corner radius and component shapes"
    ]
  },
  "foundations": {
    "colors": {
      "background": {
        "primary": "#1A1A1A",
        "secondary": "#2A2A2A",
        "tertiary": "#1F1F1F",
        "card": "#2A2A2A",
        "surface": "#333333",
        "usage": "Primary background is deep dark gray/black. Cards use slightly lighter dark gray for depth"
      },
      "gradients": {
        "header": {
          "lightStart": "#FFE5F1",
          "lightEnd": "#E9E1FF",
          "darkStart": "#6E5AD6",
          "darkEnd": "#9682EE",
          "usage": "Header uses light pink-to-purple gradient. Dark mode uses purple gradient"
        },
        "accent": {
          "purple": "linear-gradient(135deg, #6E5AD6, #9682EE)",
          "pink": "linear-gradient(135deg, #FF7BA3, #EE82C8)",
          "usage": "Use gradients for headers, hero sections, and prominent CTA buttons"
        }
      },
      "brand": {
        "primary": "#6E5AD6",
        "primaryLight": "#9682EE",
        "primaryDark": "#5A4AC4",
        "accentPink": "#FF7BA3",
        "accentPurple": "#9682EE",
        "accentYellow": "#FFC857",
        "usage": "Primary purple (#6E5AD6) for main actions. Pink and yellow for accents and badges"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#E0E0E0",
        "muted": "#B0B0B0",
        "onDark": "#FFFFFF",
        "onLight": "#1A1A1A",
        "onYellow": "#000000",
        "usage": "White text on dark backgrounds. Black text on light/yellow surfaces"
      },
      "semantic": {
        "success": "#4CAF50",
        "warning": "#FFC857",
        "error": "#E66A7A",
        "info": "#6FA8FF",
        "usage": "Semantic colors for states, feedback, and status indicators"
      },
      "overlay": {
        "dark": "rgba(0, 0, 0, 0.6)",
        "light": "rgba(255, 255, 255, 0.1)",
        "usage": "Overlays for modals, tooltips, and floating elements"
      }
    },
    "typography": {
      "fontFamilies": {
        "primary": "var(--font-inter), Inter, system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif",
        "display": "var(--font-poppins), Poppins, var(--font-inter), system-ui, sans-serif",
        "mono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace",
        "usage": "Inter for UI text, Poppins for headlines, monospace for code"
      },
      "scale": {
        "hero": {
          "fontSizePx": 32,
          "lineHeight": 1.2,
          "fontWeight": 700,
          "letterSpacing": -0.5,
          "usage": "Large page titles and hero text"
        },
        "h1": {
          "fontSizePx": 28,
          "lineHeight": 1.25,
          "fontWeight": 700,
          "letterSpacing": -0.3,
          "usage": "Main section headings"
        },
        "h2": {
          "fontSizePx": 24,
          "lineHeight": 1.3,
          "fontWeight": 600,
          "letterSpacing": -0.2,
          "usage": "Subsection headings"
        },
        "h3": {
          "fontSizePx": 20,
          "lineHeight": 1.35,
          "fontWeight": 600,
          "letterSpacing": -0.1,
          "usage": "Card titles and small headings"
        },
        "body": {
          "fontSizePx": 16,
          "lineHeight": 1.5,
          "fontWeight": 400,
          "letterSpacing": 0,
          "usage": "Main body text and descriptions"
        },
        "bodySmall": {
          "fontSizePx": 14,
          "lineHeight": 1.45,
          "fontWeight": 400,
          "letterSpacing": 0,
          "usage": "Secondary text and captions"
        },
        "caption": {
          "fontSizePx": 12,
          "lineHeight": 1.4,
          "fontWeight": 500,
          "letterSpacing": 0.1,
          "usage": "Metadata, labels, and small annotations"
        },
        "label": {
          "fontSizePx": 13,
          "lineHeight": 1.35,
          "fontWeight": 500,
          "letterSpacing": 0,
          "usage": "Button labels and form labels"
        }
      },
      "principles": [
        "Use white text on dark backgrounds for optimal contrast",
        "Headlines should be bold (600-700 weight) and compact",
        "Body text uses normal weight (400) for readability",
        "Letter spacing should be tight for large text, normal for body",
        "Maintain consistent line heights (1.2-1.5) for readability"
      ]
    },
    "spacing": {
      "baseUnit": 4,
      "scale": {
        "xs": 4,
        "sm": 8,
        "md": 12,
        "base": 16,
        "lg": 20,
        "xl": 24,
        "2xl": 32,
        "3xl": 40,
        "4xl": 48
      },
      "layout": {
        "containerPadding": 20,
        "sectionGap": 24,
        "cardGap": 16,
        "elementGap": 12,
        "compactGap": 8
      },
      "principles": [
        "Use 4px base unit for all spacing",
        "Maintain consistent gaps between sections (24px)",
        "Cards should have 16-20px internal padding",
        "Interactive elements need minimum 44x44px touch targets"
      ]
    },
    "radii": {
      "scale": {
        "none": 0,
        "xs": 8,
        "sm": 12,
        "md": 16,
        "lg": 20,
        "xl": 24,
        "2xl": 28,
        "full": 9999,
        "circular": "50%"
      },
      "usage": {
        "cards": 20,
        "buttons": "pill (full)",
        "circularButtons": "50%",
        "badges": "pill (full)",
        "inputs": 16,
        "images": 12,
        "pills": "pill (full)"
      },
      "principles": [
        "Apply generous rounding (16-24px) to all cards",
        "Use circular shape (50% or 9999px) for buttons and badges",
        "Maintain consistency: all cards should use the same radius",
        "Images use moderate rounding (10-12px) for modern look"
      ]
    },
    "shadows": {
      "scale": {
        "none": "none",
        "sm": "0 1px 2px rgba(0, 0, 0, 0.1)",
        "md": "0 4px 8px rgba(0, 0, 0, 0.15)",
        "lg": "0 8px 16px rgba(0, 0, 0, 0.2)",
        "xl": "0 12px 24px rgba(0, 0, 0, 0.25)",
        "colored": "0 4px 16px rgba(110, 90, 214, 0.3)"
      },
      "principles": [
        "Use subtle shadows for depth on cards",
        "Colored shadows can emphasize primary actions",
        "Avoid heavy shadows; keep them light and modern",
        "Shadows should be barely visible but add dimension"
      ]
    }
  },
  "components": {
    "buttons": {
      "primary": {
        "background": "#FFFFFF",
        "text": "#000000",
        "height": 56,
        "borderRadius": 16,
        "padding": "16px 24px",
        "fontSize": 16,
        "fontWeight": 600,
        "boxShadow": "none",
        "usage": "Main CTA buttons (e.g., 'Start course now')"
      },
      "secondary": {
        "background": "transparent",
        "border": "1px solid rgba(255, 255, 255, 0.2)",
        "text": "#FFFFFF",
        "height": 44,
        "borderRadius": "pill",
        "padding": "12px 20px",
        "usage": "Secondary actions and outline buttons"
      },
      "icon": {
        "size": 44,
        "borderRadius": "50%",
        "background": "rgba(110, 90, 214, 0.15)",
        "iconColor": "#FFFFFF",
        "padding": 12,
        "usage": "Circular icon buttons (back, share, settings)"
      },
      "pill": {
        "height": 36,
        "borderRadius": "pill",
        "padding": "8px 16px",
        "fontSize": 14,
        "fontWeight": 500,
        "usage": "Small pill-shaped buttons for tags and filters"
      },
      "states": {
        "hover": {
          "transform": "scale(0.98)",
          "opacity": 0.9
        },
        "active": {
          "transform": "scale(0.96)"
        },
        "disabled": {
          "opacity": 0.5,
          "cursor": "not-allowed"
        }
      }
    },
    "cards": {
      "default": {
        "background": "#2A2A2A",
        "borderRadius": 20,
        "padding": 20,
        "gap": 16,
        "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.1)",
        "usage": "Standard content cards"
      },
      "interactive": {
        "background": "#2A2A2A",
        "borderRadius": 20,
        "padding": 16,
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "hover": {
          "transform": "translateY(-2px)",
          "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.15)"
        },
        "usage": "Clickable cards (lesson items, course cards)"
      },
      "lesson": {
        "background": "#2A2A2A",
        "borderRadius": 16,
        "padding": 16,
        "display": "flex",
        "alignItems": "center",
        "gap": 16,
        "usage": "Lesson list items with icon and text"
      },
      "principles": [
        "All cards use dark gray background (#2A2A2A)",
        "Apply 20px border radius consistently",
        "Use 16-20px internal padding",
        "Maintain consistent spacing between card elements"
      ]
    },
    "badges": {
      "rating": {
        "background": "rgba(255, 255, 255, 0.15)",
        "color": "#FFFFFF",
        "borderRadius": "pill",
        "padding": "4px 12px",
        "fontSize": 14,
        "fontWeight": 600,
        "display": "inline-flex",
        "alignItems": "center",
        "gap": 6,
        "usage": "Rating badges with icons (e.g., star + rating)"
      },
      "stat": {
        "background": "#FFC857",
        "color": "#000000",
        "borderRadius": "pill",
        "padding": "8px 16px",
        "fontSize": 14,
        "fontWeight": 600,
        "display": "inline-flex",
        "alignItems": "center",
        "gap": 8,
        "usage": "Statistical badges (e.g., '25 lessons', '6 Exams')"
      },
      "tag": {
        "background": "rgba(110, 90, 214, 0.2)",
        "color": "#FFFFFF",
        "borderRadius": "pill",
        "padding": "6px 12px",
        "fontSize": 12,
        "fontWeight": 500,
        "usage": "Category tags and labels"
      }
    },
    "headers": {
      "gradient": {
        "background": "linear-gradient(135deg, #FFE5F1, #E9E1FF)",
        "paddingTop": 60,
        "paddingBottom": 24,
        "paddingHorizontal": 20,
        "borderRadius": "0 0 32px 32px",
        "usage": "Page headers with gradient background"
      },
      "content": {
        "title": {
          "fontSize": 32,
          "fontWeight": 700,
          "color": "#FFFFFF",
          "marginBottom": 12
        },
        "badge": {
          "display": "inline-flex",
          "alignItems": "center",
          "gap": 6,
          "marginLeft": 12
        }
      },
      "actions": {
        "position": "absolute",
        "top": 16,
        "left": 16,
        "right": 16,
        "display": "flex",
        "justifyContent": "space-between",
        "zIndex": 10
      }
    },
    "lists": {
      "vertical": {
        "gap": 12,
        "padding": 0,
        "margin": 0
      },
      "item": {
        "padding": 16,
        "borderRadius": 16,
        "background": "#2A2A2A",
        "display": "flex",
        "alignItems": "center",
        "gap": 16
      },
      "icon": {
        "size": 48,
        "borderRadius": 12,
        "background": "#FF7BA3",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "color": "#FFFFFF",
        "flexShrink": 0
      },
      "content": {
        "flex": 1,
        "minWidth": 0
      },
      "action": {
        "size": 32,
        "borderRadius": "50%",
        "background": "rgba(255, 255, 255, 0.1)",
        "border": "none",
        "color": "#FFFFFF",
        "cursor": "pointer"
      }
    },
    "inputs": {
      "default": {
        "background": "#2A2A2A",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "borderRadius": 16,
        "padding": "12px 16px",
        "color": "#FFFFFF",
        "fontSize": 16,
        "height": 48
      },
      "focus": {
        "borderColor": "#6E5AD6",
        "boxShadow": "0 0 0 3px rgba(110, 90, 214, 0.1)"
      }
    }
  },
  "layout": {
    "structure": {
      "mobile": {
        "maxWidth": "100%",
        "padding": 20,
        "gap": 24
      },
      "container": {
        "maxWidth": 420,
        "margin": "0 auto",
        "padding": 20
      }
    },
    "sections": {
      "header": {
        "height": "auto",
        "paddingTop": 60,
        "paddingBottom": 24
      },
      "content": {
        "padding": 20,
        "gap": 24
      },
      "footer": {
        "padding": 20,
        "paddingBottom": 32
      }
    },
    "principles": [
      "Use full-width layouts on mobile",
      "Maintain 20px horizontal padding",
      "Separate sections with 24px vertical gaps",
      "Keep content max-width at 420px for optimal reading"
    ]
  },
  "patterns": {
    "gradientHeader": {
      "description": "Header section with gradient background containing title, rating badge, and action buttons",
      "structure": [
        "Absolute positioned action buttons (back, share) at top",
        "Gradient background (pink to purple)",
        "Large white title text",
        "Inline rating badge with icon",
        "Pill-shaped stat badges below title"
      ]
    },
    "statPills": {
      "description": "Horizontal row of colorful pill-shaped badges displaying statistics",
      "structure": [
        "Yellow background for primary stats",
        "White/light background for secondary stats",
        "Icon on left, text on right",
        "Black text on yellow, white text on dark"
      ]
    },
    "lessonList": {
      "description": "Vertical list of lesson items with icon, title, and navigation arrow",
      "structure": [
        "Dark gray card background",
        "Circular/rounded icon on left",
        "Title text in center",
        "Arrow button on right",
        "16px gap between elements"
      ]
    },
    "primaryCTA": {
      "description": "Large, prominent call-to-action button at bottom of screen",
      "structure": [
        "White background with black text",
        "Full-width or centered",
        "Large height (56px)",
        "Rounded corners (16px)",
        "Bold, readable text"
      ]
    }
  },
  "animations": {
    "durations": {
      "fast": 150,
      "normal": 200,
      "slow": 300
    },
    "easings": {
      "default": "ease",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "transitions": {
      "default": "all 0.2s ease",
      "hover": "transform 0.15s ease, background-color 0.2s ease",
      "color": "color 0.2s ease, background-color 0.2s ease"
    },
    "principles": [
      "Keep animations quick (150-200ms) for responsiveness",
      "Use smooth easing for natural feel",
      "Transform scales should be subtle (0.96-0.98)",
      "Fade transitions for color changes"
    ]
  },
  "accessibility": {
    "contrast": {
      "minimum": 4.5,
      "preferred": 7,
      "usage": "Maintain WCAG AA contrast ratios (4.5:1 for text, 3:1 for UI)"
    },
    "touchTargets": {
      "minimum": 44,
      "preferred": 48,
      "usage": "All interactive elements must be at least 44x44px"
    },
    "focus": {
      "outline": "2px solid #6E5AD6",
      "outlineOffset": 2,
      "usage": "Clear focus indicators for keyboard navigation"
    }
  },
  "implementation": {
    "guidelines": [
      "Use CSS custom properties (CSS variables) for colors and spacing",
      "Apply consistent border-radius tokens throughout",
      "Maintain 4px spacing grid for all margins and padding",
      "Use flexbox/grid for layouts with consistent gaps",
      "Implement dark theme as default with light theme option",
      "Apply transitions to interactive elements",
      "Use semantic HTML with proper ARIA labels",
      "Optimize for mobile-first responsive design"
    ],
    "cssVariables": {
      "colors": {
        "--bg-primary": "#1A1A1A",
        "--bg-secondary": "#2A2A2A",
        "--text-primary": "#FFFFFF",
        "--text-secondary": "#E0E0E0",
        "--brand-primary": "#6E5AD6",
        "--brand-accent": "#FFC857",
        "--gradient-header-start": "#FFE5F1",
        "--gradient-header-end": "#E9E1FF"
      },
      "spacing": {
        "--spacing-xs": "4px",
        "--spacing-sm": "8px",
        "--spacing-md": "12px",
        "--spacing-base": "16px",
        "--spacing-lg": "20px",
        "--spacing-xl": "24px"
      },
      "radii": {
        "--radius-sm": "12px",
        "--radius-md": "16px",
        "--radius-lg": "20px",
        "--radius-xl": "24px",
        "--radius-pill": "9999px",
        "--radius-circular": "50%"
      }
    }
  }
}

